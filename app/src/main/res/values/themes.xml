<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/mont_heavy</item>
        <item name="colorPrimary">@color/intro_back_colour</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/DefaultAlertDialogTheme</item>
    </style>

    <style name="Theme.SOS.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>
    <style name="Theme.SOS.AppWidgetContainer" parent="Theme.SOS.AppWidgetContainerParent" />
    <style name="DefaultAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!--        Title Color-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--        Radio button unchecked-->
        <item name="android:colorControlNormal">@color/btn_contacts_backgroun_colour</item>
        <!--        Radio button checked-->
        <item name="android:colorControlActivated">@color/btn_contacts_backgroun_colour</item>
    </style>

</resources>